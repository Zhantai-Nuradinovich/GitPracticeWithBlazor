@page "/counter"
@attribute [Authorize]
    <MainContainer>
        <h1>Counter</h1>

        <p>Current count: @currentCount</p>

        <button class="btn btn-primary" @onclick="@IncrementCount">Click me</button>
    </MainContainer>
    @functions {
        int currentCount = 0;

        void IncrementCount()
        {
            currentCount++;
        }
    }
